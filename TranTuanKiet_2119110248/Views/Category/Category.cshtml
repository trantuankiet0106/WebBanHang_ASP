@model List<TranTuanKiet_2119110248.Category>
@{
    ViewBag.Title = "Category";
}
<body>
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
        <div class="container">
            <nav class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3">
                        <div class="card card-category">
                            <div class="img-wrap" style="background: #daeef1; width: 100%;">
                                <img src="~/Content/images/Category/@item.avatar">
                            </div>
                            <div class="card-body">
                                <h4 class="card-title"><a href="#">@item.name</a></h4>
                                <ul class="list-menu">
                                    <li><a href="">Leather jackets</a></li>
                                    <li><a href="">Men's jackets</a></li>
                                    <li><a href="">Heating battery clothes</a></li>
                                    <li><a href="">Jeans jackets</a></li>
                                    <li><a href="">Great items name</a></li>
                                </ul>
                            </div>
                        </div>
                    </div> <!-- col.// -->
                }
               
               
              
                
            </nav> <!-- row.// -->


        </div> <!-- container .//  -->
    </section>
    

</body>

