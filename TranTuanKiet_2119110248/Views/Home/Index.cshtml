        <!-- =============== SECTION DEAL =============== -->
        <section class="padding-bottom">
            <div class="card card-deal">
                <div class="col-heading content-body">
                    <header class="section-heading">
                        <h3 class="section-title">Giảm Giá</h3>
                        <p>Hygiene equipments</p>
                    </header><!-- sect-heading -->
                    <div class="timer">
                      
                        <div> <span class="num">04 </span> <small>Days</small></div>
                        <div> <span class="num">12</span> <small>Hours</small></div>
                        <div> <span class="num">58</span> <small>Min</small></div>
                        <div> <span class="num">02</span> <small>Sec</small></div>
                    </div>
                </div> <!-- col.// -->
                <div class="row no-gutters items-wrap">

                    @foreach (var item in Model.lstProduct.Where(n=>n.PriceDiscount !=null).Take(4))
                    {
                        var sale =  item.PriceDiscount * 100 / item.ProductPrice;
                       
                        <div class="col-md col-6">
                            <figure class="card-product-grid card-sm">
                                <a href="@Url.Action("Detail","Product",new { id = item.ProductId })" class="img-wrap">
                                    <img src="~/Content/images/Product/@item.Avatar">
                               
                                </a>
                                <div class="text-wrap p-3">
                                    <a href="@Url.Action("Detail","Product",new { id = item.ProductId })" class="title text-truncate">@item.ProductName</a>
                                  
                                        <span class="badge badge-danger"> @Math.Round(100 -(float)sale, 1)%</span>
                                    
                                 

                                </div>
                            </figure>
                        </div> <!-- col.// -->
                    }



                </div>
            </div>

        </section>
